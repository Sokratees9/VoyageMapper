<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/directionsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/directions"
                android:padding="6dp"
                app:tint="?attr/colorPrimary"
                app:srcCompat="@drawable/ic_directions_24" />
        </LinearLayout>


        <ImageView
            android:id="@+id/thumb"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <!-- content/description -->
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:maxLines="12"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <!-- Info rows -->
        <com.google.android.material.textview.MaterialTextView
            style="@style/SightRowText"
            android:id="@+id/phone"
            android:visibility="gone"
            android:autoLink="phone"
            android:linksClickable="true"
            android:drawableStart="@drawable/ic_call_24"
            android:contentDescription="@string/phone" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/SightRowText"
            android:id="@+id/website"
            android:visibility="gone"
            android:autoLink="web"
            android:linksClickable="true"
            android:drawableStart="@drawable/ic_web_24"
            android:contentDescription="@string/website" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/SightRowText"
            android:id="@+id/address"
            android:visibility="gone"
            android:autoLink="web"
            android:linksClickable="true"
            android:drawableStart="@drawable/ic_map_24"
            android:contentDescription="@string/address" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/SightRowText"
            android:id="@+id/hours"
            android:visibility="gone"
            android:drawableStart="@drawable/ic_access_time_24"
            android:contentDescription="@string/hours" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/SightRowText"
            android:id="@+id/price"
            android:visibility="gone"
            android:drawableStart="@drawable/ic_currency_pound_24"
            android:contentDescription="@string/price" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/SightRowText"
            android:id="@+id/wiki"
            android:clickable="true"
            android:focusable="true"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:visibility="gone"
            android:autoLink="web"
            android:drawableStart="@drawable/wikipedia_s_w"
            android:contentDescription="@string/wikipedia" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
